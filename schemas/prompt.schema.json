{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sidecar.dev/schemas/prompt.schema.json",
  "title": "Prompt",
  "description": "A saved prompt template record",
  "type": "object",
  "required": [
    "id",
    "name",
    "content",
    "category",
    "variables",
    "use_count",
    "created_at",
    "updated_at",
    "record_type",
    "schema_version"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier"
    },
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9_-]*$",
      "description": "Prompt name (lowercase, hyphens, underscores)"
    },
    "content": {
      "type": "string",
      "minLength": 1,
      "description": "Prompt template content with optional {{variable}} placeholders"
    },
    "category": {
      "type": "string",
      "default": "general",
      "description": "Category for organizing prompts"
    },
    "variables": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true,
      "description": "Variable names extracted from content"
    },
    "use_count": {
      "type": "integer",
      "minimum": 0,
      "default": 0,
      "description": "Number of times the prompt has been used"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 creation timestamp"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 last-updated timestamp"
    },
    "record_type": {
      "type": "string",
      "const": "prompt",
      "description": "Record type discriminator"
    },
    "schema_version": {
      "type": "integer",
      "minimum": 1,
      "description": "Schema version for migration support"
    }
  },
  "additionalProperties": false
}
